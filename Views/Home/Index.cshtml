@{
}

@model BooksViewModel
@foreach (Book bk in Model.Books)
{
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                @bk.Title
                <span class="badge badge-pill badge-primary" style= "float:right">
                    <small>@bk.Price.ToString("c")</small>
                </span>
            </h4>
        </div>
        <div class="card-text p-1">Book Author: @bk.Author</div>
        <div class="card-text p-1">Publisher: @bk.Publisher</div>
        <div class="card-text p-1">ISBN: @bk.Isbn</div>
        <div class="card-text p-1">Classification: @bk.Classification</div>
        <div class="card-text p-1">Category: @bk.Category</div>
        <div class="card-text p-1">Book Length: @bk.PageCount pages</div>
    </div>
}
<div page-pagey="@Model.PageInfo" page-action="Index" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>

